<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadBookForSaleActivity">

    <ImageView
        android:id="@+id/imageViewHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/homebg"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="74dp" />

    <TextView
        android:id="@+id/postCategoryTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:autoSizeTextType="uniform"
        android:padding="20dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:autoSizeTextType="uniform"
        android:padding="20dp"
        android:text="Add new post"
        android:textColor="#ffffff"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/topicTitle"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="75dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint=" Post title"
        android:inputType="text"
        android:padding="5dp"
        android:textColor="#000000"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHome" />

    <EditText
        android:id="@+id/topicAuthor"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" Your name"
        android:textColor="#000000"
        android:padding="5dp"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topicTitle" />


    <EditText
        android:id="@+id/postContent"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="fill_horizontal"
        android:inputType="textMultiLine"
        android:hint=" Post content"
        android:padding="5dp"
        android:textColor="#000000"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topicAuthor" />

    <Button
        android:id="@+id/addPostButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#2a9d8f"
        android:text="Add post"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postContent" />


</androidx.constraintlayout.widget.ConstraintLayout>

