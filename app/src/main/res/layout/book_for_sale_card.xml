<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="230dp"
    android:layout_width="380dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp"

    android:backgroundTint="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/bookForSaleISBNTv"
            android:layout_width="180dp"
            android:layout_height="23dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:text="TextView"
            android:textColor="#264653"
            app:layout_constraintBottom_toTopOf="@+id/bookForSaleDescriptionTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bookcardIv"
            app:layout_constraintTop_toBottomOf="@+id/bookForSaleAuthorTv" />

        <ImageView
            android:id="@+id/bookForSaleIv"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.517"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/bookForSaleTitleTv"
            android:layout_width="180dp"
            android:layout_height="23dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="TextView"
            android:textColor="#2a9d8f"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/bookForSaleIv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bookForSaleAuthorTv"
            android:layout_width="180dp"
            android:layout_height="23dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="TextView"
            android:textColor="#e76f51"
            app:layout_constraintBottom_toTopOf="@+id/bookForSaleISBNTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bookcardIv"
            app:layout_constraintTop_toBottomOf="@+id/bookForSaleTitleTv" />

        <TextView
            android:id="@+id/bookForSaleDescriptionTv"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="16dp"
            android:text="TextView"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/bookForSaleIv"
            app:layout_constraintTop_toBottomOf="@+id/bookForSaleISBNTv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>